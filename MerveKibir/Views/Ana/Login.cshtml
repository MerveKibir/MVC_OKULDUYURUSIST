
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";

}
<div class="container d-flex justfy-content-center">
    <div class="col-6">
        <h3>Oturum Açma</h3>
        <form action="/ana/Login" method="post">
            <label for="kullaniciAdi" class="form-label">Kullanıcı Adı:</label><br />
            <input id="kullaniciAdi" type="text" name="KullaniciAdi" placeholder="Kullanıcı adını giriniz.." class="form-control" /><br />
            <label for="parola" class="form-label">Parola:</label><br />
            <input id="parola" type="password" name="Parola" placeholder="Parolayı giriniz.." class="form-control" /><br />
            <button type="submit" class="btn btn-primary" style="border-color:mediumseagreen; background-color:mediumseagreen;">Oturum Aç</button>
        </form>
    </div>

</div>



